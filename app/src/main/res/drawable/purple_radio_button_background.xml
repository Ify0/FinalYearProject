<!-- purple_radio_button_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected state -->
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#7C6980" /> <!-- Your desired purple color -->
                    <corners android:radius="8dp" /> <!-- Adjust the corner radius as needed -->
                </shape>
            </item>
            <item android:drawable="@drawable/ic_radio_checked" />
        </layer-list>
    </item>

    <!-- Default state -->
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#FFFFFF" /> <!-- Default color when not selected -->
                    <corners android:radius="8dp" /> <!-- Adjust the corner radius as needed -->
                    <stroke
                        android:width="2dp"
                        android:color="#7C6980" /> <!-- Border color -->
                </shape>
            </item>
            <item android:drawable="@drawable/ic_radio_unchecked" />
        </layer-list>
    </item>
</selector>
